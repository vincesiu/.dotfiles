#----------------------------------------
# ALIASES
#----------------------------------------

#So I don't overwrite files
alias rm='rm -id'
alias mv='mv -i'
alias cp='cp -i'


#Shortcuts
alias dirs='dirs -v'
alias jj='jobs -l'
alias ppush='pushd .'


#Utility
alias ls='ls --color=auto -C --group-directories-first'
alias la='ls --color=auto -alF --group-directories-first'
alias ll='ls --color=auto -lF --group-directories-first'

alias powerup='chmod u+x' #quick alias for making something runnable
alias blacksheepwall='reset; stty sane; echo -e "\033c"' #alias for reseting terminal
